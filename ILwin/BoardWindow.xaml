<Window x:Class="ILwin.BoardWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="BoardWindow" Height="686" Width="800" ResizeMode="NoResize" WindowStyle="None" Closing="boardClosing">
    <Grid>
        <Grid x:Name="forDrag" Width="800" Height="40 " HorizontalAlignment="Left" VerticalAlignment="Top" MouseLeftButtonDown="board_dragging" Background="Transparent">
    </Grid>
    <Grid>
        <TextBox x:Name="texts" HorizontalAlignment="Left" Width="724" VerticalAlignment="Top" Margin="28, 40, 0, 0" TextWrapping="WrapWithOverflow" ></TextBox>
    </Grid>
        <Grid x:Name="okbut" Margin="0,0,0,60" Width="83" Height="21"  
             HorizontalAlignment="Center" VerticalAlignment="Bottom" MouseLeftButtonDown="okdown" MouseEnter="okenter" MouseLeave="okleave" />
    </Grid>
</Window>
