<Window x:Class="ILwin.MallWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="MallWindow" Height="673" Width="438" ResizeMode="NoResize" Closing="mallClosing">
    <Grid>
        <TextBox x:Name="queryitem" HorizontalAlignment="Left" Width="200" VerticalAlignment="Top" Margin="180, 23, 0, 0"  
                 BorderThickness="0" Foreground="SkyBlue" FontSize="14" ></TextBox>
        <TextBox x:Name="status" HorizontalAlignment="Left" Width="220" VerticalAlignment="Top" Margin="110, 145, 0, 0" TextWrapping="WrapWithOverflow" 
                 BorderThickness="0" Foreground="White" FontSize="20"></TextBox>
        <Grid x:Name="okbutton" HorizontalAlignment="Left" Width="182" Height="38" VerticalAlignment="Top" Margin="112, 68, 0, 0" MouseLeftButtonUp="searchItems"></Grid>
        <TextBox x:Name="texts" HorizontalAlignment="Left" Width="408" VerticalAlignment="Top" Margin="10, 250, 0, 0" TextWrapping="WrapWithOverflow" 
                 BorderThickness="0" Foreground="White" ></TextBox>
    </Grid>
</Window>
